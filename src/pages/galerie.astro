<Layout title="Salon de l'Entrepreneuriat Numérique et de L'Inteligence Artificielle">
     <main>
          <HeaderGalerie/>
          <section class=" bg-slate-200 flex flex-col relative -top-14">
            <h3 class="text-sm uppercase mx-auto inline-block my-6 text-white font-[500] bg-gradient-to-r from-gradient3 from-0% via-gradient2 via-45% to-[#df0838] to-90% hover:bg-gradient-to-r hover:from-[#df0838] hover:from-0%  hover:via-gradient2 hover:via-45% hover:to-gradient3 hover:to-90% transition-all ease-in  p-2 rounded-l-full rounded-tr-full text-center">GALERIE SENIA 2022-2023</h3>

            <p class="text-xl text-black font-[600] text-center">Découvrez la galerie des dernières éditions du SENIA</p>
    
            <div class="w-[90%] mx-auto my-5">
                <div class="flex flex-wrap gap-8 justify-center">
                       {
                        galeries.map((galerie)=>(
                            <Galeriee image={galerie.img} />
                        ))
                       }
                </div>
        
            </div>

          </section>
          <Footer/>
     </main>
</Layout>
