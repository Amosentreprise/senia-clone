---
 interface Props {
	numero: string;
 	title: string;
 	contenu: string;
	icone: string;
 }

const { numero,icone, title, contenu } = Astro.props;
---

<div class="sm:[80%] md:w-[40%] lg:w-[30%] bg-gradient-to-r from-gradient1  to-gradient3 to-90% text-white font-monteserrat flex flex-col space-y-3 p-10">
	<div class="flex justify-between">
     <span class="text-5xl font-bold block"><i class={icone}></i></span>
	 <span class="text-2xl font-bold block">{numero}</span>
	</div>
	<h2 class="text-xl font-[600px]">{title}</h2>
	<p>{contenu}</p>
</div>
